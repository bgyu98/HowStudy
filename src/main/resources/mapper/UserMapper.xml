<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.dao.UserDAO">
	<!-- 회원가입 -->
	<insert id="insertCustomer" parameterType="UserVO">
		INSERT INTO MEMBER
		(mId, mPw, mName, mPhone, mEmail )
		VALUES(#{mId}, #{mPw}, #{mName},
		#{mPhone},#{mEmail})
	</insert>

	<!-- 아이디 중복 체크 -->
	<select id="checkId" parameterType="UserVO" resultType="UserVO">
		SELECT *
		FROM MEMBER
		WHERE mId=#{mId}
	</select>

	<!-- 로그인 -->
	<select id="loginCustomer" parameterType="UserVO" resultType="UserVO">
		SELECT * FROM MEMBER
		WHERE mId=#{mId} AND mPw=#{mPw}
	</select>

</mapper>
